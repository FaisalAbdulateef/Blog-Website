<div class="row">
  <div class="col-md-12">
    <h2>Categories
      <button style="border:none; background-color:transparent; float:right"><a href="/categories/add" class="btn btn-success pull-right">Add Category</a></button>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        {{#each categories}}
          <tbody>
            <tr>
              <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
              <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
              <td><a href="categories/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
            </tr>
          </tbody>
        {{/each}}
      </table>
    </div>
    {{#unless categories}}
      <strong>{{message}}</strong>
    {{/unless}}
  </div>
</div>