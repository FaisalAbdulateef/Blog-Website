<div class="row">
  <div class="col-md-12">
    {{#unless categories}}
      <strong>{{message}}</strong>
    {{/unless}}
    <h2>Categories</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
        {{#each categories}}
          <tbody>
            <tr>
              <td><a href="/posts?category={{this.id}}">{{id}}</a></td>
              <td><a href="/posts?category={{this.id}}">{{category}}</a></td>
            </tr>
          </tbody>
        {{/each}}
      </table>
    </div>
  </div>
</div>