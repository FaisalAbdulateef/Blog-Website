<div class="row">
  <div class="col-md-12">
    <h2>Posts
      <button style="border:none; background-color:transparent; float:right"><a href="/posts/add" class="btn btn-success pull-right">Add Post</a></button>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Published</th>
          </tr>
          {{#each posts}}
            <tbody>
              <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{#formatDate postDate}}</td>
                {{/formatDate}}
                <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                <td>{{published}}</td>
                <td><a href="/posts/delete/{{id}}" class="btn btn-danger">Remove</a></td>
              </tr>
            </tbody>
          {{/each}}
        </thead>
      </table>
    </div>
    {{#unless posts}}
      <strong>{{message}}</strong>
    {{/unless}}
  </div>
</div>